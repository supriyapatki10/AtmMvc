    $(document).ready(function () {
        function minmax(value, min, max) {
            if (parseInt(value) < min || isNaN(parseInt(value)))
                return min;
            else if (parseInt(value) > max)
                return max;
            else return value;
        }



        function validateAtmWithdrawalRange() {
            var min = 0;
            var max = 100000;
            var value = document.getElementById("txt").value;
